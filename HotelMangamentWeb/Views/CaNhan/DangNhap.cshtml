@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/_LayoutLogIn.cshtml";
}

@using HotelMangamentWeb.Models.ViewModels
@model TaiKhoanDangNhapView


<div class="container dang-nhap-form">
    @using (Html.BeginForm("DangNhap", "CaNhan", FormMethod.Post))
    {
        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center mb-5">
                        <h2 class="heading-section"><strong>Login</strong></h2>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="login-wrap p-0">
                            <h3 class="mb-4 text-center">Have an account?</h3>
                            <form action="#" class="signin-form">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="TenTaiKhoan" placeholder="Username" required value="@Model.TenTaiKhoan">
                                    <span class="canh-bao">@Html.ValidationMessageFor(m => m.TenTaiKhoan)</span>
                                </div>
                                <div class="form-group">
                                    <input id="password-field" type="password" class="form-control" name="MatKhau" placeholder="Password" required value="@Model.MatKhau">
                                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                    <span class="canh-bao">@Html.ValidationMessageFor(m => m.MatKhau)</span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                                </div>
                                <div class="form-group d-md-flex">
                                    <div class="w-50">
                                        <label class="checkbox-wrap checkbox-primary">
                                            Remember Me
                                            @Html.CheckBoxFor(m => m.TuDongDangNhap, new { @class = "checkbox" })
                                            <input type="checkbox" checked>
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div class="w-50 text-md-right">
                                        <a href="#" style="color: #fff">Forgot Password</a>
                                    </div>
                                </div>
                            </form>
                            <p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
                            <div class="social d-flex text-center">
                                <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                                <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
                            </div>
                        </div>
                        <h5><span style="color:#777777">Don't have an account?&nbsp;&nbsp;<a href="/CaNhan/DangKy/">Sign up</a></span></h5>

                    </div>
                </div>
            </div>
        </section>

        <script src="js/jquery.min.js"></script>
        <script src="js/popper.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script src="js/main.js"></script>
    }

</div>

