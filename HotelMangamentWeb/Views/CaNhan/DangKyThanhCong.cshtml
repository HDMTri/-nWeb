@{
    ViewBag.Title = "Đăng Ký Thành Công";
    Layout = "~/Views/Shared/_LayoutSignUp.cshtml";
}

@using HotelMangamentWeb.Models;
@model TaiKhoan

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section"><strong>Sign Up Successfully</strong></h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="login-wrap p-0">
                    <form action="#" class="signin-form">
                        <div class="form-group">
                            <bold>Username:<span class="form-control">@Model.TenTaiKhoan</span></bold>

                        </div>
                        <div class="form-group">
                            <bold>Password:<span class="form-control">@Model.MatKhau</span></bold>

                        </div>

                        <div class="form-group">
                            <bold>Name:<span class="form-control">@Model.HoTen</span></bold>

                        </div>

                        <div class="form-group">
                            <bold>Your Phone Number:<span class="form-control">@Model.SoDienThoai</span></bold>

                        </div>

                        <div class="form-group">
                            <bold>Email:<span class="form-control">@Model.Email</span></bold>

                        </div> 

                        <h5><span style="color:#fff">Go back to&nbsp;<a href="/CaNhan/DangNhap/">Log in</a></span></h5>
                    </form>


                </div>
            </div>
        </div>
    </div>
</section>

<script src="js/jquery.min.js"></script>
<script src="js/popper.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/main.js"></script>
}
